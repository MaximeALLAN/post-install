# /etc/modutils/son
# Fichier de configuration des modules ALSA
# Formation Debian GNU/Linux par Alexis de Lattre
# http://formation-debian.via.ecp.fr/

# Ne pas oublier d'exécuter "update-modules" après chaque modification

alias char-major-116 snd
alias char-major-14 soundcore
options snd cards_limit=1

# Remplacez "nom_du_module_ALSA" par le nom du module ALSA de votre carte son
# (avec le préfixe "snd-")
alias snd-card-0 nom_du_module_ALSA

alias sound-slot-0 snd-card-0
alias sound-service-0-0 snd-mixer-oss
alias sound-service-0-1 snd-seq-oss
alias sound-service-0-3 snd-pcm-oss
alias sound-service-0-8 snd-seq-oss
alias sound-service-0-12 snd-pcm-oss
